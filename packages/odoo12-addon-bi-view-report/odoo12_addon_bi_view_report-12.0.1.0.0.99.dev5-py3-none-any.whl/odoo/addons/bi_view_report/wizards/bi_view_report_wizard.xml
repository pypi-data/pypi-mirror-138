<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
  <data>
    <record id="view_form_bi_view_report_wizard" model="ir.ui.view">
      <field name="name">Create Cron Job</field>
      <field name="model">bi.view.report.wizard</field>
      <field name="arch" type="xml">
        <form>
          <group>
            <field name="partner_id" />
            <field name="name" />
            <field name="bve_view_name" readonly="1"/>
            <field name="nextcall" />
            <field name="interval_number" />
            <field name="interval_type" />
            <field name="filter_id" domain="[('model_id', '=', bve_view_name)]" />
          </group>
          <footer>
            <button name="create_cron_job" string="Create" type="object" />
            <button special="cancel" string="Cancel" class="btn-secondary" />
          </footer>
        </form>
      </field>
    </record>
    <act_window id="action_bi_view_report_wizard"
                name="Create Cron Job"
                res_model="bi.view.report.wizard"
                view_type="form"
                view_mode="form"
                target="new"
                />
    <record id="view_bi_view_report_wizard_button" model="ir.ui.view">
      <field name="name">bi.view.report.wizard.button</field>
      <field name="model">report.async</field>
      <field name="inherit_id" ref="report_async.view_report_async_form"/>
      <field name="arch" type="xml">
        <button name="run_now" position="after">
          <button name="%(action_bi_view_report_wizard)d"
                  string="Create Cron Job"
                  type="action"
                  context="{'default_active_id': active_id}"
                  icon="fa-clock-o"
          />
        </button>
      </field>
    </record>
    <record id="view_bi_view_report_wizard_tree_button" model="ir.ui.view">
      <field name="name">bi.view.report.wizard.tree.button</field>
      <field name="model">report.async</field>
      <field name="inherit_id" ref="report_async.view_report_async_tree"/>
      <field name="arch" type="xml">
        <button name="run_now" position="after">
          <button name="%(action_bi_view_report_wizard)d"
                  string="Create Cron Job"
                  type="action"
                  context="{'default_active_id': active_id}"
                  icon="fa-clock-o"
          />
        </button>
      </field>
    </record>
  </data>
</odoo>