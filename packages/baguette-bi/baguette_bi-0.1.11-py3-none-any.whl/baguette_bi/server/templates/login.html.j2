{% extends "base.html.j2" %}

{% block title %}
    <title>Login | Baguette BI</title>
{% endblock %}

{% block content %}
{% include "elements/login.html.j2" %}
{% endblock %}

{% block bottom %}
<script>
(() => {
    const login = document.querySelector("#login-submit");
    const form = document.querySelector("#login-form");
    login.addEventListener("click", () => {
        form.submit();
    });
    document.querySelectorAll("#username,#password").forEach(el => {
        el.addEventListener("keypress", e => {
            if (e.key === "Enter") {
                form.submit();
            }
        });
    });
})();
</script>
{% endblock bottom %}
